<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:mix="http://www.jcp.org/jcr/mix/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:template="/conf/sscp/settings/wcm/templates/sscp-content-page"
        jcr:isCheckedOut="{Boolean}true"
        jcr:mixinTypes="[mix:versionable]"
        jcr:primaryType="cq:PageContent"
        jcr:title="Locked Account"
        sling:resourceType="sscp/components/page"
        pwaCachestrategy="staleWhileRevalidate"
        pwaDisplay="standalone"
        pwaOrientation="any"
        textIsRich="[true,true,true,true]">
        <root
            jcr:primaryType="nt:unstructured"
            sling:resourceType="sscp/components/container"
            layout="responsiveGrid">
            <container
                jcr:primaryType="nt:unstructured"
                sling:resourceType="sscp/components/container"
                layout="responsiveGrid">
                <container
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="sscp/components/container"
                    containerClass="fixed"
                    layout="simple">
                    <lockedaccount
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="sscp/components/lockedaccount"
                        lockedButtonText="unlock account"
                        lockedDescription="&lt;p>You can unlock your account by clicking the button below, otherwise if you are continuing to experience issues please contact our customer service team on &lt;a href=&quot;tel:137200&quot;>137 200&lt;/a> Mon-Fri 8.30am - 7.00pm AET.&lt;/p>&#xd;&#xa;"
                        lockedIcon="error"
                        lockedTitle="Your account has been locked"
                        loginButtonText="Login &amp; Continue"
                        loginButtonUrl="/content/sscp/blueprint/homepage/login"
                        managePasswordDescription="&lt;p>This password will be used for any future logins. Your password must be &lt;b>at least 8 &lt;/b>characters in length and different to previously used passwords. &lt;/p>&#xd;&#xa;&lt;p>It must meet &lt;b>at least 3 &lt;/b>of the 4 conditions listed below:&lt;/p>&#xd;&#xa;&lt;ul>&#xd;&#xa;&lt;li>At least 1 UPPER CASE letter (A-Z)&lt;/li>&#xd;&#xa;&lt;li>At least 1 lower case letter (a-z)&lt;/li>&#xd;&#xa;&lt;li>At least 1 number (0-9)&lt;/li>&#xd;&#xa;&lt;li>At least 1 special character e.g. (@,#,$,%,&amp;amp;, ?)&lt;/li>&#xd;&#xa;&lt;/ul>&#xd;&#xa;"
                        managePasswordEditTitle="Reset your password"
                        resetButtonText="reset password"
                        resetButtonUrl="/content/sscp/blueprint/homepage/forgot-password"
                        setPasswordText="Set Password &amp; log in"
                        textIsRich="[true,true,true,true,true]"                        
                        thankYouDescription="You have successfully unlocked your account. We'll now take you to your account page."
                        unlockedDescription="&lt;p>Your account has been unlocked. You can now continue with your login or alternatively, you can reset your password.&lt;/p>&#xd;&#xa;"
                        unlockedIcon="unlocked"
                        unlockedTitle="Your account has been unlocked"/>
                </container>
            </container>
        </root>
    </jcr:content>
</jcr:root>
