<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Properties"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <logoPath
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldLabel="Logo Path"
                        name="./logoPath"
                        rootPath="/content/dam/sscp"/>
                    <logoRedirectUrl
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                        fieldLabel="Logo Redirect URL"
                        name="./logoRedirectUrl"
                        rootPath="/content/sscp/"/>
                    <logoAltText
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Logo Alt Text"
                        name="./logoAltText"/>
                    <menuList
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true"
                        fieldLabel="Menu List">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container"
                            name="./menuItem">
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                        <itemWell
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/well">
                                            <items jcr:primaryType="nt:unstructured">
                                                <text
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldLabel="Text"
                                                    name="./text"/>
                                                <url
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                    fieldLabel="URL path"
                                                    name="./url"
                                                    rootPath="/content"/>
                                                <isNewTab
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                    name="./isNewTab"
                                                    text="Open link in new tab?"
                                                    uncheckedValue="false"
                                                    value="true"/>
                                            </items>
                                        </itemWell>                                        
                                    </items>
                                </column>
                            </items>
                        </field>
                    </menuList>
                    <contactUsText
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Contact us Text"
                        name="./contactUsText"/>
                    <contactUsDetails
                        jcr:primaryType="nt:unstructured"
                        sling:resourceSuperType="apps/sscp/components/text"
                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                        removeSingleParagraphContainer="{Boolean}true"
                        useFixedInlineToolbar="{Boolean}true"
                        fieldLabel="Enter Contact us details"
                        name="./contactUsDetails" />
                    <postalAddress
                        jcr:primaryType="nt:unstructured"
                        sling:resourceSuperType="apps/sscp/components/text"
                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                        removeSingleParagraphContainer="{Boolean}true"
                        useFixedInlineToolbar="{Boolean}true"
                        fieldLabel="Enter Postal Address details"
                        name="./postalAddress" />
                    <licenceDetails
                        jcr:primaryType="nt:unstructured"
                        sling:resourceSuperType="apps/sscp/components/text"
                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                        removeSingleParagraphContainer="{Boolean}true"
                        useFixedInlineToolbar="{Boolean}true"
                        fieldLabel="Enter Licence details"
                        name="./licenceDetails" />
                    <bottomFooterMenuList
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true"
                        fieldLabel="Bottom Footer Menu List">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container"
                            name="./bottomFooterMenuItem">
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                        <itemWell
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/well">
                                            <items jcr:primaryType="nt:unstructured">
                                                <text
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldLabel="Text"
                                                    name="./text"/>
                                                <url
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                    fieldLabel="URL path"
                                                    name="./url"
                                                    rootPath="/content"/>
                                                <isNewTab
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                    name="./isNewTab"
                                                    text="Open link in new tab?"
                                                    uncheckedValue="false"
                                                    value="true"/>
                                            </items>
                                        </itemWell>                                        
                                    </items>
                                </column>
                            </items>
                        </field>
                    </bottomFooterMenuList>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
